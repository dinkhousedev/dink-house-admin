# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# SendGrid Configuration (for admin notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=contact@example.com
EMAIL_FROM_NAME=Your Company
ADMIN_EMAIL=admin@example.com

# Site Configuration
SITE_URL=https://example.com
NEXT_PUBLIC_SITE_URL=https://example.com

# Admin Authentication
# Set to http://localhost:3000 for local dev
# Set to https://admin.example.com for production
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Storage Configuration
STORAGE_BUCKET=your-bucket-name
LOGO_URL=https://your-supabase-url/storage/v1/object/public/bucket/logo.jpg
